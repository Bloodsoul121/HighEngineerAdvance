    <ImageView
        android:id="@+id/btn_publish"
        android:src="@drawable/b6l"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/search_bar"
        app:layout_constraintBottom_toTopOf="@+id/container"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/container"
        app:layout_constraintTop_toBottomOf="@+id/btn_publish"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/home"
        app:layout_constraintVertical_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <View
        app:layout_constraintTop_toBottomOf="@+id/container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#f4f5f6"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/home"
        android:gravity="center"
        android:text="首页"
        android:textSize="10sp"
        android:textColor="#f76061"
        android:drawableTop="@drawable/alu"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toBottomOf="@+id/container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/xigua_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/xigua_video"
        android:gravity="center"
        android:text="西瓜视频"
        android:textSize="10sp"
        android:textColor="#69696a"
        android:drawableTop="@drawable/am1"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toBottomOf="@+id/container"
        app:layout_constraintLeft_toRightOf="@+id/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/small_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/small_video"
        android:gravity="center"
        android:text="小视频"
        android:textSize="10sp"
        android:textColor="#69696a"
        android:drawableTop="@drawable/bfq"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toBottomOf="@+id/container"
        app:layout_constraintLeft_toRightOf="@+id/xigua_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/user"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/user"
        android:gravity="center"
        android:text="未登录"
        android:textSize="10sp"
        android:textColor="#69696a"
        android:drawableTop="@drawable/alx"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toBottomOf="@+id/container"
        app:layout_constraintLeft_toRightOf="@+id/small_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
