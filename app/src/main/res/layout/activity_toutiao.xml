<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <View
        app:layout_constraintTop_toBottomOf="@+id/container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#f4f5f6"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/home"
        android:gravity="center"
        android:text="首页"
        android:textSize="10sp"
        android:textColor="#f76061"
        android:drawableTop="@drawable/alu"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toBottomOf="@+id/container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/xigua_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,SmallSp" />

    <TextView
        android:id="@+id/xigua_video"
        android:gravity="center"
        android:text="西瓜视频"
        android:textSize="10sp"
        android:textColor="#69696a"
        android:drawableTop="@drawable/am1"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toBottomOf="@+id/container"
        app:layout_constraintLeft_toRightOf="@+id/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/publish_toutiao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,SmallSp" />

    <TextView
        android:id="@+id/publish_toutiao"
        android:gravity="center"
        android:text="发头条"
        android:textSize="10sp"
        android:textColor="#69696a"
        android:drawableTop="@drawable/bfs"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toBottomOf="@+id/container"
        app:layout_constraintLeft_toRightOf="@+id/xigua_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/small_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,SmallSp" />

    <TextView
        android:id="@+id/small_video"
        android:gravity="center"
        android:text="小视频"
        android:textSize="10sp"
        android:textColor="#69696a"
        android:drawableTop="@drawable/bfq"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toBottomOf="@+id/container"
        app:layout_constraintLeft_toRightOf="@+id/publish_toutiao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,SmallSp" />

    <TextView
        android:id="@+id/user"
        android:gravity="center"
        android:text="未登录"
        android:textSize="10sp"
        android:textColor="#69696a"
        android:drawableTop="@drawable/alx"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toBottomOf="@+id/container"
        app:layout_constraintLeft_toRightOf="@+id/small_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,SmallSp" />

</android.support.constraint.ConstraintLayout>
